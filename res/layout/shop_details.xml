<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical" android:layout_height="fill_parent" android:padding="10px">





<LinearLayout android:id="@+id/LinearLayout02" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:scrollbarStyle="insideInset" android:scrollbars="vertical" android:layout_marginBottom="5px">
	<ImageView android:id="@+id/image" android:layout_width="140px" android:layout_height="160px" android:scaleType="fitCenter" android:padding="5px"></ImageView>
	<LinearLayout android:id="@+id/LinearLayout03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:text="@+id/name" android:id="@+id/name" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
		<TextView android:text="@+id/genre" android:id="@+id/genre" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
		<TextView android:text="@+id/description" android:id="@+id/description" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
	</LinearLayout>
</LinearLayout>

<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
	<Button android:layout_width="120px" android:layout_height="wrap_content" android:id="@+id/openUrlButton" android:text="@string/openUrlButtonText" android:layout_gravity="center"></Button>
	<Button android:layout_width="120px" android:layout_height="wrap_content" android:id="@+id/closeButton" android:text="@string/closeButtonText" android:layout_gravity="center"></Button>
</LinearLayout>



</LinearLayout>
